/* pages/login/bind.wxss */
page {
  font-size: 24rpx;
}

.container {
  width: 90%;
  padding: 0;
  margin: 50rpx 5%;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 10rpx 2rpx #4876FF ;
}

picker {
  width: 100%;
}

.input-wrapper {
  display: flex;
  width: 90%;
  height: 80rpx;
  margin: auto;
  padding: 20rpx 0;
  border-bottom: 5rpx solid #EAE7E8;
  align-items: center;
}

.input-wrapper input {
  margin-left: 5%;
  width: calc(100% - 50rpx);
}

.input-wrapper image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
}

.menu-wrapper {
  display: flex;
  width: 90%;
  height: 100rpx;
  margin: 0 auto;
  align-items: center;
}

.menu-wrapper button {
  padding: 0;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #4876FF;
  color: #fff;
  border-radius: 20rpx;
  font-size: 36rpx;
}