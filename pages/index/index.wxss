.header {
  height: 300rpx;
  background-color: #fff;
  position: relative;
}

swiper {
  width: 90%;
  height: 280rpx;
  margin: 0 auto;
}

swiper image {
  width: 100%;
  height: 280rpx;
}

.main {
  width: 100%;
}

.main .panel {
  margin-top: 20rpx;
  border-radius: 15rpx;
  background-color: #fff;
}

.type-menu {
  width: 94%;
  /* height: 400rpx; */
  margin: 0 auto;
  padding: 20rpx 0;
}

.type-menu .type-item {
  display: inline-flex;
  flex-direction: column;
  width: 25%;
  height: 50%;
  justify-content: center;
  align-items: center;
}

.type-menu image {
  width: 100rpx;
  height: 100rpx;
}

.type-menu text {
  margin-top: 10rpx;
  font-size: 28rpx;
}

.special {
  padding: 20rpx 5%;
}

.special text {
  height: 80rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: left;
}

.special image {
  margin-top: 20rpx;
  height: 150rpx;
  width: 100%;
}

.announce {
  padding-bottom: 100rpx;
}

.announce .item-wrapper {
  width: 90%;
  margin: 0 auto;
  padding: 20rpx 0;
  border-bottom: 2rpx #bbb solid;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.announce .title text {
  font-size: 40rpx;
  font-weight: bold;
}

.announce .title image {
  width: 30rpx;
  height: 30rpx;
}

.announce .item .text-wrapper text {
  font-size: 32rpx;
}

.announce .item .text-wrapper .bottom-wrapper {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  color: #bbb;
}

.announce .item .text-wrapper .bottom-wrapper text {
  font-size: 24rpx;
}

.announce .item .img-wrapper {
  padding: 0 10rpx;
}

.img-wrapper image {
  width: 150rpx;
  height: 150rpx;
}